<h1>Usuarios</h1>

<%= link_to "Nuevo usuario", new_admin_user_path %>

<% if  @usuarios.blank? %>
<p> No hay elementos en la base de datos</p>
<% else %>
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th> Id </th>
			<th> Nombre </th>
			<th> Email </th>
			<th> Tipo de Usuario </th>
			<th> Opciones </th>
		</tr>
	</thead>
	<tbody>
		<% @usuarios.each do |e| %>
			<tr>
				<td><%= e.id %></td>
				<td><%= "#{e.nombre} #{e.apellido_paterno} #{e.apellido_materno}" %></td>
				<td><%= e.email %> </td>
				<td><%= e.role %> </td>
				

				<td><%= link_to "[Mostrar]", admin_user_path(e) %></td>
				<td><%= link_to "[Editar]", edit_admin_user_path(e) %></td>

				<td><%= link_to "[Eliminar]", admin_user_path(e), method: :delete, data: {confirm: "Eliminar elemento?"} %></td>
				
				<td>  </td>
		</tr>
		<% end %>
	</tbody>
</table>

<% end %>
